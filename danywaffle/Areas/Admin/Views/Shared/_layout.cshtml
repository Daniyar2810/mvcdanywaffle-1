<!Doctype html>
<html lang="tr">
<head>
    <title>@ViewBag.Title  Dany Waffle-Admin </title>
    <meta name="viewport" content="width=device-width , initial-scale=1.0" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="AdminAnaSayfa">Dany Waffle</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link " asp-controller="Category" asp-action="Index">
                            <i class="bi bi-collection"></i>
                            Kategoriler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Index">
                            <i class="bi bi-basket"></i>
                            Ürünler
                        </a>
                    </li>


                </ul>

            </div>
        </div>
    </nav>
    <main class=" container">
        @RenderBody()
    </main>
    <footer class="container bg-body-secondary py-4">
        &copy; @DateTime.Today.Year-Tüm hakları saklıdır-Kullanım Koşulları - Gizlilik Politikasi
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
@RenderSection("scripts",false)
</body>
</html>